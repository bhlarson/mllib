if [ "$1" != "" ]; then
    version_tag="$1"
else
    version_tag="latest"
fi

image_name=localhost:32000/ml:$version_tag

docker run --gpus all -it --rm --cap-add=CAP_SYS_ADMIN \
    -v "$(pwd):/app" \
    -v "/data:/data" \
    -v "/data/store:/store" \
    -v /etc/localtime:/etc/localtime:ro \
    -p 6006:6006/tcp \
    -p 5001:5000/tcp \
    -p 3000:3000 ${image_name}

# docker run -it --gpus all --rm --network host nvcr.io/nvidia/l4t-tensorflow:r32.5.0-tf2.3-py3